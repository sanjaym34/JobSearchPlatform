<%- include('partials/header2') -%>

<h1> Jobs Matching your Preference </h1>

<% eligible.forEach(function(eachEmployer){ %>

<div class="row">
    <div class="col"></div>
    <div class="col-sm-12 col-md-8">
        <div class="card text-center">
            <div class="card-header">
                <h2> <%= eachEmployer.companyName %> </h2>
            </div>
            <div class="card-body">
                <h5 class="card-title"> Job Title: <%= eachEmployer.jobTitle %> </h5>
                <br>
                <h5 class="card-title"> Pay/Month:  <%= eachEmployer.Salary %>  </h5>
                <br>
                <h5 class="card-title"> Job Description:  <%= eachEmployer.jobDescription %>  </h5>
                <br>
                <h5 class="card-title"> Last Date to apply is  <%= eachEmployer.lastDateToApply %>  </h5>
                <br>
                <h5 class="card-title"> Percentage Chances of getting recruited:  <%= eachEmployer.percentage %> % </h5>
                <br>
                <a href="/applypage/<%= eachEmployer._id %>" class="btn btn-primary"> View Details </a>
            </div>
        </div>  
    </div>
    <div class="col"></div>
</div>
<br> 
<% }) %>

<%- include('partials/footer') -%>