<%- include('partials/header2') -%>

<h1> Resume Upload Page </h1>

<div class="row">
    <div class="col"></div>
    <div class="col-sm-12 col-md-8">
        <div class="card text-center">
            <div class="card-header">
                <h2> <%= foundEmployer.jobTitle %> at <%= foundEmployer.companyName %> </h2>
            </div>
            <div class="card-body">
                <h5 class="card-title">Upload Resume</h5>
                <form action="/resumeUploadPage/<%=foundEmployer._id%>" method="POST" enctype="multipart/form-data" class="upload">
                    <div class="form-group">
                        <input type="file" name="uploadFile" class="form-control-file" id="exampleFormControlFile1">
                    </div>
                    <button type="submit" class="btn btn-primary"> SUBMIT </button>
                </form> 
            </div>
        </div>
    </div>
    <div class="col"></div>
</div>


<%- include('partials/footer') -%>

